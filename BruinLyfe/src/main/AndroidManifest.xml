<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bruinlyfe.bruinlyfe"
    android:versionCode="8"
    android:versionName="1.2.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.bruinlyfe.bruinlyfe.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bruinlyfe.bruinlyfe.MenuDisplayActivity"
            android:parentActivityName="com.bruinlyfe.bruinlyfe.MainActivity"
            android:label="Menu">
            </activity>
        <activity
            android:name="com.bruinlyfe.bruinlyfe.TutorialActivity"
            android:parentActivityName="com.bruinlyfe.bruinlyfe.MainActivity"
            android:label="Tutorial"
            android:theme="@style/Transparent"
            >
        </activity>

    </application>

</manifest>
