<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_centerInParent="true"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:id="@+id/table_hours"
            >

        <!-- 5 columns -->
        <TableRow
                android:id="@+id/tableRowTitles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/table_padding"
                android:layout_weight="1"
                android:gravity="center_horizontal">

            <TextView
                    android:id="@+id/textViewLocation"
                    android:text="@string/location"
                    android:textStyle="bold"
                    android:padding="@dimen/table_padding"
                    />

            <TextView
                    android:id="@+id/textViewBreakfast"
                    android:text="@string/breakfast"
                    android:textStyle="bold"
                    android:padding="@dimen/table_padding"
                    />

            <TextView
                    android:id="@+id/textViewLunch"
                    android:text="@string/lunch"
                    android:textStyle="bold"
                    android:padding="@dimen/table_padding"
                    />

            <TextView
                    android:id="@+id/textViewDinner"
                    android:text="@string/dinner"
                    android:textStyle="bold"
                    android:padding="@dimen/table_padding"
                    />

            <TextView
                    android:id="@+id/textViewLateNight"
                    android:text="@string/late_night"
                    android:textStyle="bold"
                    android:padding="@dimen/table_padding"
                    />
        </TableRow>

        <!-- Bcafe -->
        <TableRow
                android:id="@+id/tableRowBcafe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/table_padding"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                >

