                    android:padding="@dimen/table_padding"
                    />

            <com.bruinlyfe.bruinlyfe.TimeView
                    android:id="@+id/timeViewBcafeBreakfast"
                    android:padding="@dimen/table_padding"
                    />

            <com.bruinlyfe.bruinlyfe.TimeView
                    android:id="@+id/timeViewBcafeLunch"
                    android:padding="@dimen/table_padding"
                    />

            <com.bruinlyfe.bruinlyfe.TimeView
                    android:id="@+id/timeViewBcafeDinner"
